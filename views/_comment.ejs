                if((locals.user) && (j.user._id.toString() == locals.user._id.toString())) 
                    {%> 
                    <a id="delete-link-comment-<%=j._id%>" class="delete-comment-link" href="/comments/delete-comment/?cId=<%=j._id%>&pId=<%=i._id%>&uId=<%=j.user._id%>" type="submit">X</a> 
